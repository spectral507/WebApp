{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "bin",
    "node_modules"
  ],
  "include": [
    "node_modules/angular-bootstrap-md/**/*.ts",
    "ClientApp/**/*.ts"
  ]
}
